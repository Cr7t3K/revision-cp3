{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div style="">
        <h3>{{ item.name }} ({{ item.price }}€ HT)</h3>
        <p>{{ item.description ?? 'Aucune description'}}</p>
        <p>Prix TTC: {{ priceTTC }}€</p>
        <a href="{{ path('app_item_show', {'id': item.id }) }}">Plus d'info</a>
    </div>


    {% for message in app.flashes('error') %}
        <div style="color: black; background-color: #B0413E">
            {{ message }}
        </div>
    {% endfor %}
</div>
{% endblock %}
